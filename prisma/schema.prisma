datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum FriendStaus {
  pending
  accepted
}

model User {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    email String @unique
    password String
    name String
    fromFriend Friend[] @relation("FromFriend")
    toFriend Friend[] @relation("ToFriend")
    MarketDataFollow MarketDataFollow[]
}

model Friend {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  from User @relation("FromFriend", fields: [fromId], references: [id])
  fromId Int
  to User @relation("ToFriend", fields: [toId], references: [id])
  toId Int
  status FriendStaus
}

model Company {
  cik Int @id
  ticker String
  title String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MarketDataFollow {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id])
  userId Int
}
